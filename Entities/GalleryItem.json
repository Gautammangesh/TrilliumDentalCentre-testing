{
  "name": "GalleryItem",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "image",
        "video"
      ],
      "default": "image"
    },
    "url": {
      "type": "string",
      "description": "Image or video URL"
    },
    "thumbnail_url": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "clinic",
        "treatments",
        "results",
        "team",
        "events"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "display_order": {
      "type": "number",
      "default": 0
    }
  },
  "required": [
    "title",
    "type",
    "url",
    "category"
  ]
}
