{
  "name": "ContactMessage",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string"
    },
    "subject": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "new",
        "in_progress",
        "resolved"
      ],
      "default": "new"
    },
    "replied": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "name",
    "email",
    "message"
  ]
}
